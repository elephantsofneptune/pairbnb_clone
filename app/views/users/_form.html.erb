<div id="name" class="text-field">
  <%= form.label :name %>
  <%= form.text_field :name, type: 'name' %>
</div>

<div id="email" class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div id="password" class="password-field required">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
